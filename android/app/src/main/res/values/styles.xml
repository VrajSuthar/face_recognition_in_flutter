<resources>
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Transparent background to avoid native splash -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Ensure status bar and navigation bar are visible -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#FFFFFFFF</item> <!-- white status bar -->
        <item name="android:navigationBarColor">#FFFFFFFF</item> <!-- white nav bar -->
    </style>
</resources>